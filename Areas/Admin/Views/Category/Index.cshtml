@model List<HLTClothes.Models.Category>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <a href="/admin/category/create" class="btn btn-dark text-white">Add Category</a>
    <div class="row">
        <div class="col">
            <table class="table">
                <tr>
                    <th>Category ID</th>
                    <th>Category Name</th>
                    <th>Manage</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CategoryID</td>
                        <td>@item.CategoryName</td>
                        <td><a href="/admin/category/edit/@item.CategoryID"><i class="fa fa-pencil btn btn-secondary" aria-hidden="true"></i></a></td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

