@model HLTClothes.Models.Product
@{
    ViewBag.Title = "Delete";
}

<div class="container-fluid">
    <form action="/admin/product/delete/@Model.ProductID" method="post" @*enctype="multipart/form-data"*@>
        <input type="hidden" name="ProductID" value="@Model.ProductID" />
        <div class="row">
            <div class="col-md-4 col-sm-12">
                <label for="ProductName">Product Name</label>
                <input type="text" class="form-control" id="ProductName" name="ProductName" value="@Model.ProductName" placeholder="Product Name" readonly="readonly" />
            </div>
            <div class="col-md-4 col-sm-12">
                <label for="Price">Price</label>
                <input type="number" class="form-control" id="Price" name="Price" placeholder="Price" value="@((uint)Model.Price.Value)" readonly="readonly"/>
            </div>
            <div class="col-md-4 col-sm-12">
                <label for="ImageUrl">Image</label>
                <img src="~/Images/@Model.ImageUrl" class="img-thumbnail" id="ImageUrl" />
            </div>
        </div>
        <button type="submit" class="btn btn-danger"><i class="fa fa-trash fa-2x" aria-hidden="true"> Delete</i></button>
        <a href="/admin/product/index" class="btn btn-outline-success"><i class="fa fa-step-backward fa-2x" aria-hidden="true"></i> Cancel</a>
    </form>
</div>

