@model HLTClothes.Identity.AppUser

@{
    ViewBag.Title = "Edit";
}

<h2 class="text-center mb-4">Edit</h2>
<div class="container-fluid">
    <form action="/admin/user/edit/@Model.Id" method="post">
        <input type="hidden" name="@Model.Id" value="@Model.Id" />
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <label for="@Model.UserName">User Name</label>
                <input type="text" class="form-control" id="@Model.UserName" name="@Model.UserName" value="@Model.UserName" />
            </div>
            <div class="col-md-6 col-sm-12">
                <label for="@Model.Email">Email</label>
                <input type="text" class="form-control" id="@Model.Email" name="@Model.Email" value="@Model.Email" />
            </div>
            <div class="col-md-6 col-sm-12">
                <label for="@Model.PhoneNumber">Mobile</label>
                <input type="text" class="form-control" id="@Model.PhoneNumber" name="@Model.PhoneNumber" value="@Model.PhoneNumber" />
            </div>
            <div class="col-md-6 col-sm-12">
                <label for="@Model.Address">Address</label>
                <input type="text" class="form-control" id="@Model.Address" name="@Model.Address" value="@Model.Address" />
            </div>
        </div>
        <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o fa-2x" aria-hidden="true"> Update</i></button>
        <a href="/admin/user/index" class="btn btn-danger"><i class="fa fa-trash fa-2x" aria-hidden="true"></i> Cancel</a>
    </form>
</div>
