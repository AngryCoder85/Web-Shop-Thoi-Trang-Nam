@model HLTClothes.ViewModel.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2 class="text-center">Đăng nhập</h2>
<div class="container-fluid" style="min-height:500px">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
    <div class="row w-75 mx-auto">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.Username)
            @Html.TextBoxFor(temp => temp.Username, new { @class = "form-control", placeholder = "UserName..." })
            @Html.ValidationMessageFor(temp => temp.Username)
        </div>
        <div class="col-md-3"></div>
        <div class="col-md-3"></div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.Password)
            @Html.PasswordFor(temp => temp.Password, new { @class = "form-control", placeholder = "Password..." })
            @Html.ValidationMessageFor(temp => temp.Password)
        </div>
    </div>
    <div class="row w-75 mx-auto">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            @Html.ValidationSummary()
        </div>
        <div class="col-md-3"></div>
        <div class="col-md-3"></div>
        <div class="col-md-6 text-center">
            <button type="submit" class="btn btn-success mt-2"><i class="fa fa-sign-in" aria-hidden="true"></i> Login</button>
        </div>
    </div>
    }
</div>

